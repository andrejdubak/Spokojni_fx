<DialogPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.spokojni.frontend.ChangePasswordPopupController">
   <content>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <PasswordField fx:id="oldPassword" layoutX="208.0" layoutY="90.0" promptText="%Old_password" />
                  <PasswordField fx:id="newPassword" layoutX="208.0" layoutY="152.0" promptText="%New_password" />
                  <PasswordField fx:id="repeatPassword" layoutX="208.0" layoutY="227.0" promptText="%Repeat_password" />
                  <Button fx:id="savePassword" layoutX="239.0" layoutY="297.0" mnemonicParsing="false" onAction="#saveSettings" text="%Save_password" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
</DialogPane>
