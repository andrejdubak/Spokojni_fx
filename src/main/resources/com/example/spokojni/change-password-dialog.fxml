<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane prefHeight="190.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.spokojni.frontend.ChangePasswordPopupController">
   <content>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="190.0" prefWidth="300.0">
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <PasswordField fx:id="oldPassword" layoutY="90.0" prefWidth="230.0" promptText="%Old_password" AnchorPane.leftAnchor="20.0" />
                  <PasswordField fx:id="newPassword" layoutX="208.0" layoutY="135.0" prefWidth="230.0" promptText="%New_password" AnchorPane.leftAnchor="20.0" />
                  <PasswordField fx:id="repeatPassword" layoutX="208.0" layoutY="180.0" prefWidth="230.0" promptText="%Repeat_password" AnchorPane.leftAnchor="20.0" />
                  <Button fx:id="savePassword" layoutX="200.0" layoutY="236.0" mnemonicParsing="false" onAction="#saveSettings" prefWidth="130.0" text="%Save_password" AnchorPane.leftAnchor="20.0" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
</DialogPane>
