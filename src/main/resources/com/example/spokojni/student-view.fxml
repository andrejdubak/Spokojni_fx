<?xml version="1.0" encoding="UTF-8"?>

<?import com.calendarfx.view.CalendarView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.spokojni.frontend.StudentViewController">
    <children>
        <CalendarView fx:id="calendarView" prefHeight="720.0" prefWidth="1280.0" showAddCalendarButton="false" showPrintButton="false" />
      <HBox>
         <children>
              <Button fx:id="loadButton" mnemonicParsing="false" onAction="#buttonClick" prefHeight="26.0" prefWidth="160.0" text="%Load_calendar" wrapText="true">
                  <font>
                      <Font size="14.0" />
                  </font>
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
            </Button>
              <Button mnemonicParsing="false" onAction="#saveClick" prefHeight="26.0" prefWidth="160.0" text="%Save_and_exit" wrapText="true">
                  <font>
                      <Font size="14.0" />
                  </font>
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#changePassword" prefHeight="26.0" prefWidth="160.0" text="%Profile" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
</VBox>
